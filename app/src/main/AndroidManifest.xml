<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.manage.hospital.hmapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/NoActionBarTheme">
        <activity android:name=".ui.DoctorMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AppointmentActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.AppointmentDetailActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.PatientActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.PatientMainActivity" />
        <activity
            android:name=".ui.PatientSourceActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.FitbitActivity"
            android:theme="@style/AppTheme"/>
        
        <activity android:name=".Extras.fitbit.FitbitTokenResponse"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="hospapp" android:host="callbackresponse"/>
            </intent-filter>
        </activity>

        
    </application>

</manifest>